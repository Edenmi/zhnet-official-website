{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext", "DOM"],
    "types": ["vite/client", "vite-plugin-pages/client", "unplugin-icons/types/vue"],
    "sourceMap": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "preserve"
  },
  "include": ["src/**/*.ts", "src/**/*.vue", "components.d.ts", "test/**/*.ts"]
}
